<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.socratesdiaz.friends">

    <permission android:name="com.socratesdiaz.friends.provider.READWRITE"/>
    <uses-permission android:name="com.socratesdiaz.friends.provider.READWRITE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.socratesdiaz.friends.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:authorities="com.socratesdiaz.friends.provider"
            android:name="com.socratesdiaz.friends.FriendsProvider"
            android:exported="true"
            android:readPermission="com.socratesdiaz.friends.provider.READWRITE"
            android:writePermission="com.socratesdiaz.friends.provider.READWRITE" />
    </application>

</manifest>